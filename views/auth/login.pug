extends ../layouts/login

block content
  .section
    main
      center
        .container
          .white.row(style='display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;')
            h5.black-text Login
            
            form.col.s12(method='POST')
              .row
                .col.s12
              .row
                .input-field.col.s12
                  input#email.validate(type='email', name='email')
                  label(for='email') Email
              .row
                .input-field.col.s12
                  input#password.validate(type='password', name='password')
                  label(for='password') Password
                label(style='float: right;')
                  a.pink-text(href='#!')
                    b Forgot your password ?
              br
              center
                .row
                  button.col.s12.btn.waves-effect.black.waves-light(type='submit', name='btn_login') Login
            center
              a.col.s12.black-text(href="/create-account") Create an account
              .row
